@model MapModel
@{ ViewBag.Title = "Map"; }

@section Styles {
    <style type="text/css">
        .Map { position: absolute; top: 0; left: 0; bottom: 0; right: 0; }
        #header { z-index: 100; }
        #nav { z-index: 100; }
    </style>
}

@section Scripts {
    <script type="text/javascript"src="//maps.google.com/maps/api/js?key=@WebApplicationRegistry.Settings.GoogleApiKey"></script>
    @Scripts.Render("~/js/Map.js")
    <script type="text/javascript">
        $(function () {
            var map = $('.Map');
            $('#content, #footer').remove();
            $('#wrapper').css('margin-bottom', 0).append(map);
            $('body').css('min-height', '0');
            map.Mapify();

            var timeout = setTimeout(function () {
                    timeout = null;
                    $('#header').slideUp();
                }, 4000);
                $('#top').hover(
                    function () {
                        if (timeout) { clearTimeout(timeout); timeout = null; }
                        $('#header').slideDown();
                    },
                    function () {
                        timeout = setTimeout(function () {
                            timeout = null;
                            $('#header').slideUp();
                        }, 2000);
                    }
            );
        });
    </script>
}

@Html.DisplayFor(m => m)