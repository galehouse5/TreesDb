@model Nullable<DateTime>

@{
    if (ViewData.ModelMetadata.IsReadOnly) {
        ViewBag.disabled = true;
    }

    ViewBag.@class = ViewBag.@class == null ? "text DatePicker" : ViewBag.@class + " text DatePicker";
    ViewBag.size = ViewBag.size ?? "40";
}

@Html.TextBox(string.Empty,
    !string.IsNullOrEmpty(ViewData.ModelMetadata.EditFormatString) ?
        string.Format(ViewData.ModelMetadata.EditFormatString, Model)
        : string.Format("{0}", Model),
    ViewData)