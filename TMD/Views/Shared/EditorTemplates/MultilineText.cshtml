@model String

@{
    if (ViewData.ModelMetadata.IsReadOnly) {
        ViewBag.disabled = true;
    }

    ViewBag.@class = ViewBag.@class == null ? "text" : ViewBag.@class + " text";
    ViewBag.cols = ViewBag.cols ?? "50";
    ViewBag.rows = ViewBag.rows ?? "5";
}

@Html.TextAreaFor(m => m, ViewData)