@model EntityGridModel<TMD.Model.Trees.GlobalMeasuredSpecies>
@{ ViewBag.Title = "Browse Species"; }

@section Scripts {
    <script type="text/javascript">
        $(function () { $('div.dataTablesGrid').AjaxDataTablesGrid(); });
    </script>
}

<div class="portlet x12">
	<div class="portlet-header">
        <h4>Species</h4>
        <ul class="portlet-tab-nav">
            <li class="portlet-tab-nav-ignore">
                <a href="@Url.Action("SpeciesByFilters", "Export", new { botanicalNameFilter = Request["BotanicalNameFilter"], commonNameFilter = Request["CommonNameFilter"] })">Export tree data</a>
            </li>
        </ul>
    </div>
	<div class="portlet-content">
        @Html.Partial("GlobalSpeciesGridPartial", Model)
    </div>
</div>
