@model bool
@{ ViewBag.Title = "Register"; }

<div class="content_front">
    <div class="pad">
        @if (Model) {
            <h2>Account registration complete</h2>
            <p>You can now @Html.ActionLink("logon", "Logon", "Account") and start using your account.</p>
        } else {
            <h2>Email already verified</h2>
            <p>
                If you've already verified your email you can now @Html.ActionLink("logon", "Logon", "Account"). 
                If you haven't, you should try @Html.ActionLink("re-registering", "Register", "Account").
            </p>
        }
    </div>
</div>