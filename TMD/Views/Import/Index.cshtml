@model ImportModel

@{
    ViewBag.Title = "Import";
}

@section Scripts {
    <script>
        (function () {
            var hasInvalidData = function () {
                return document.cookie.indexOf('invalid-data=True') > -1;
            };

            var display = function (hasInvalidData) {
                $('[data-invalid-data=true]').toggle(hasInvalidData);
                $('[data-invalid-data=false]').toggle(!hasInvalidData);
            };

            var poll = function () {
                display(hasInvalidData());
                setTimeout(poll, 1000);
            };

            poll();
        })();
    </script>
}

<div class="jumbotron" data-invalid-data="false">
    <h1>Import</h1>

    <div class="row">
        <div class="col-sm-6">
            <p>Download your database to record the sites you visit and the trees you measure.</p>

            <a class="btn btn-default btn-lg" href="@Url.Action("Download")">
                <span class="glyphicon glyphicon-file"></span> TMD.xlsx
            </a>
        </div>

        <div class="col-sm-6">
            <p>Upload your database to share your recordings with the community.</p>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="form-group">
                    <input type="file" name="Database" data-val="true" data-val-required="You must choose a file." />
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Upload Database</button>
            }
        </div>
    </div>
</div>

<div class="jumbotron" data-invalid-data="true" style="display: none;">
    <h1>Fix Invalid Data</h1>

    <p>There were errors detected in your database. Your browser has downloaded a copy with these highlighted. Apply corrections and try uploading again.</p>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-group">
            <input type="file" name="Database" data-val="true" data-val-required="You must choose a file." />
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Upload Database</button>
    }
</div>