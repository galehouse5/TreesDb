@model ImportSiteModel

<div class="portlet x12 Site">
  <div class="portlet-header Entity-Header Site-Header">
    <h4>@Model.Name</h4>
    <div class="actions">
      @Html.ImportInnerActionButton("Edit", ImportModelLevel.Site, Model.Id, ImportModelAction.Edit, ButtonColor.Orange, ButtonSize.Small)
    </div>
  </div>

  <div class="portlet-content">
    @Html.HiddenFor(m => m.Id)

    @Html.ModelScopedValidationSummary2()

    <ul>
      @Html.SummaryDisplayFor(m => m.State)
      @Html.SummaryDisplayFor(m => m.County)
      @Html.SummaryDisplayFor(m => m.OwnershipType)
    </ul>

    @if (Model.Photos.Count > 0)
    {
      @Html.DisplayFor(m => m.Photos)
    }
  </div>
</div>
