@model ImportSiteTreesModel
<div class="portlet x12 Site">
  <div class="portlet-header Entity-Header Site-Header">
    <h4>@Model.Name</h4>
  </div>
  <div class="portlet-content">
    @Html.HiddenFor(m => m.Id)
    @for (int i = 0; i < Model.Trees.Count; i++) {
      if (Model.Trees[i].IsEditing) {
        @Html.EditorFor(m => m.Trees[i])
      } else {
        @Html.DisplayFor(m => m.Trees[i])
      }
    }

    <div class="buttonrow">
      @Html.ImportInnerActionButton("Add tree", ImportModelLevel.Site, Model.Id, ImportModelAction.Add, ButtonColor.Orange)
    </div>
  </div>
</div>
