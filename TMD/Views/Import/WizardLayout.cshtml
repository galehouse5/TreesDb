@{ Layout = "~/Views/Shared/SiteLayout.cshtml"; }

@section Styles {
    <link href="@Url.ManagedContent(Links.css.Import_css)" rel="Stylesheet" type="text/css" />
}

@section Scripts { 
    <script src="@Url.ManagedContent(Links.js.Import_js, Links.js.Import_min_js)" type="text/javascript"></script>
    @RenderSection("Scripts", false) 
}

<div class="portlet x2">
    <div class="portlet-header">
        <h4>Steps</h4>
    </div>
    <div class="portlet-content">
        @RenderSection("Steps")
    </div>
</div>
<div class="portlet x10">
    <div class="portlet-header">
        @RenderSection("StepHeader")
    </div>
    <div class="portlet-content">
        @RenderBody()
    </div>
</div>